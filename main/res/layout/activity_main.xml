<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <Button
        android:id="@+id/b_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#99ff99"
        android:text="@string/green"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/b_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ff7a66"
        android:text="@string/red"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/b_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#6495ed"
        android:text="@string/blue"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/b_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffff85"
        android:text="@string/yellow"
        android:textColor="@color/black" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <Button
        android:id="@+id/b_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#c9a0dc"
        android:onClick="showDeveloper"
        android:text="@string/developer"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/b_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffc966"
        android:onClick="setBackgroundImage"
        android:text="@string/background"
        android:textColor="@color/black" />

</LinearLayout>